{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": false
  },
  "include": [
    "./src",
    "./types",
    "./rollup.config.ts"
  ]
}